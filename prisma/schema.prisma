generator client {
  provider = "prisma-client-js" // padrao nestJS
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   
  name      String
  createdAt DateTime @default(now())

  account   Account?
}

model Account {
  id        Int      @id @default(autoincrement())
  agency    String   
  number    String   @unique 
  balance   Int      @default(0) // Saldo em centavos

  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique

  ledgerEntries Ledger[]
}

model Transaction {
  id          String   @id @default(uuid()) 
  description String   
  amount      Int      
  type        String   
  createdAt   DateTime @default(now())

  ledgerEntries Ledger[]
}

model Ledger {
  id            String      @id @default(uuid())
  amount        Int         
  type          LedgerType  

  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId String

  account       Account     @relation(fields: [accountId], references: [id])
  accountId     Int
}

enum LedgerType {
  DEBIT
  CREDIT
}
